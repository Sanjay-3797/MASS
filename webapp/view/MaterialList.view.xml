<mvc:View
    controllerName="com.worksheet.worksheet.controller.MaterialList"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:table="sap.ui.table"
    xmlns:core="sap.ui.core"
    displayBlock="true"
    xmlns:l='sap.ui.layout'
    xmlns:f='sap.ui.layout.form'
    xmlns:c='sap.ui.core'
    xmlns="sap.m"
    xmlns:form="sap.ui.comp.smartform"
    xmlns:u="sap.ui.unified"
>
    <Page
        id="page"
        showHeader="false"
    >
        <content>
            <HBox id='MaterialList'>
                <Panel id='listOptions'>
                    <FlexBox
                        id='flex'
                        class='sapUiMediumMargin'
                        justifyContent="Center"
                        alignItems="Center"
                    >
                        <Text
                            id='header'
                            class='listOptionsHeader'
                            text='Export and Import'
                        />
                    </FlexBox>
                    <Table
                        id="Mtype_table"
                        inset="false"
                        class='sapUiTinyMarginTop'
                        items="{MaterialType>/list}"
                        growing="true"
                        growingThreshold="5"
                    >
                        <columns>
                            <Column
                                id='colMtype'
                                width="10rem"
                            >
                                <Text
                                    id='textMtype'
                                    text="Material Type"
                                />
                            </Column>
                            <Column
                                id='colMtypeDesc'
                                width="10rem"
                            >
                                <Text
                                    id='textDownload'
                                    text="Download"
                                />
                            </Column>
                            <Column
                                id='colUpload'
                                width="10rem"
                            >
                                <Text
                                    id='textUpload'
                                    text="Upload"
                                />
                            </Column>
                        </columns>
                        <items>
                            <ColumnListItem
                                id='columnList'
                                type="Active"
                                press="onGetid"
                            >
                                <cells>
                                    <ObjectIdentifier
                                        id='MtypeText'
                                        title="{MaterialType>mType}"
                                    />
                                    <Button
                                        id='uploadBtn'
                                        type="Success"
                                        press="onExport"
                                        icon="sap-icon://download"
                                    />
                                    <u:FileUploader
                                        id="fileUploader"
                                        fileType="xlsx"
                                        sendXHR="true"
                                        name="myFileUpload"
                                        buttonText="Browse"
                                        useMultipart="false"
                                        placeholder="Choose a file..."
                                        tooltip="Upload your file to the local server"
                                        uploadComplete="handleUploadComplete"
                                    />
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>
                    <FlexBox
                        id='foot'
                        class='sapUiMediumMargin'
                        justifyContent="End"
                    >
                        <Button
                            id='submit'
                            press="onSubmitExcel"
                            type="Emphasized"
                            width="100%"
                            text='Submit'
                        />
                    </FlexBox>
                </Panel>
            </HBox>
        </content>
    </Page>
</mvc:View>
